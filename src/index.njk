<div class="p-2">
  <ul>
    {% set length = collections.post.length if collections.post.length < 5 else 
      5 %}
    {% set posts = collections.post | reverse %}
    {% for index in range(0, length) %}
      {% set post = posts[index] %}
      <li class="hover:bg-secondary border border-dotted border-transparent hover:border-accent p-2">
        <a href="{{post.url}}">
          <div class="flex flex-row">
            <div class="flex-grow">
              <b>{{post.data.title}}</b>
            </div>
            <div class="flex-none">
              <b>{{post.data.date | dateFormat}}</b>
            </div>
          </div>
          <p>{{ post.data.description }}</p>
        </a>
      </li>
    {% endfor %}
  </ul>
