{% macro NavbarItem(text, href) %}
  <li class="inline-block border-b border-dotted border-transparent hover:border-accent-secondary {{ 'border-accent' if page.fileSlug == href.slice(1) }}">
    <a href="{{ href }}">
      {{ caller() }}
      <span class="align-middle">{{ text }}</span>
    </a>
  </li>
{% endmacro %}

{% macro NavbarSvgIcon() %}
  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-4 h-4 inline align-middle">
    {{ caller() }}
  </svg>
{% endmacro %}

